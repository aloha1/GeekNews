<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg">

    <RelativeLayout
        android:id="@+id/rl_name_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_item_margin_top_bottom"
        android:layout_marginLeft="@dimen/news_item_margin_left_right"
        android:layout_marginRight="@dimen/news_item_margin_left_right">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cfanr"
            android:textColor="@color/news_item_text_color"
            android:textSize="@dimen/news_item_text_small_size" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="30min"
            android:textColor="@color/news_item_text_color"
            android:textSize="@dimen/news_item_text_small_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_item_margin_between"
        android:layout_marginLeft="@dimen/news_item_margin_left_right"
        android:layout_marginRight="@dimen/news_item_margin_left_right"
        android:layout_below="@id/rl_name_time"
        android:text="@string/news_item_title_text"
        android:textColor="@color/news_item_title_color"
        android:textSize="@dimen/news_item_title_text_size" />

    <LinearLayout
        android:id="@+id/ll_news_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_item_margin_between"
        android:layout_marginLeft="@dimen/news_item_margin_left_right"
        android:layout_marginRight="@dimen/news_item_margin_left_right"
        android:layout_marginBottom="3dip"
        android:layout_below="@id/tv_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like_num"
            android:textColor="@color/news_item_text_color"
            android:textSize="@dimen/news_item_text_small_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/news_item_text_color"
            android:textSize="@dimen/news_item_text_small_size"
            android:text="@string/dots" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_num"
            android:textColor="@color/news_item_text_color"
            android:textSize="@dimen/news_item_text_small_size" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="navyifanr.github.io"
            android:textColor="@color/news_item_text_color"
            android:layout_marginBottom="@dimen/news_item_margin_top_bottom"
            android:textSize="@dimen/news_item_text_small_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/news_item_text_color"
        android:layout_below="@id/ll_news_info"
        />
</RelativeLayout>
